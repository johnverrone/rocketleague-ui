{{#md-btn action='openModal' buttonType='floating'
    class='btn-large light break-edge'}}
    <i class="material-icons primary">add</i>
{{/md-btn}}

{{#if modalIsOpen}}
    {{#md-modal close='closeModal' class="test-modal"}}
        <div class="modal-content">
          <form {{action "submit" on="submit"}} class="row">
            {{md-select content=teams
                value=blueTeam
                label="Blue Team"
                prompt="Please choose..."
                optionLabelPath="content.name"
                optionValuePath="content.id" class="col s4"}}
            {{md-select content=teams
                value=orangeTeam
                label="Orange Team"
                prompt="Please choose..."
                optionLabelPath="content.name"
                optionValuePath="content.id" class="col s4"}}
            {{md-input-date label='Match Date' value=matchDate class="col s4"}}
          </form>
        </div>
        <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'submit'}}>
                Create
            </a>
            <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'closeModal'}}>
                Cancel
            </a>
        </div>
    {{/md-modal}}
{{/if}}

