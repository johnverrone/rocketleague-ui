{{md-btn action='openModal'
    class='light'
    text='Create Match'}}

{{#if modalIsOpen}}
    {{#md-modal close='closeModal' class="test-modal"}}
        <div class="modal-content">
          <h4 class="primary">Week {{weekNumber}}</h4>
          <form {{action "submit" on="submit"}} class="row">
            {{md-select content=teams
                value=blueTeam
                label="Blue Team"
                prompt="Please choose..."
                optionLabelPath="content.name"
                optionValuePath="content.id" class="col s4 primary"}}
            {{md-select content=teams
                value=orangeTeam
                label="Orange Team"
                prompt="Please choose..."
                optionLabelPath="content.name"
                optionValuePath="content.id" class="col s4 primary"}}
            {{md-input-date label='Match Date' value=matchDate class="col s4 primary"}}
          </form>
        </div>
        <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'submit'}}>
                Create
            </a>
            <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'closeModal'}}>
                Cancel
            </a>
        </div>
    {{/md-modal}}
{{/if}}

