{{#md-card-panel id='register-card' class='rl-card'}}
  <div class="rl-card-header">
    <h3>New User</h3>
  </div>
  
  <div class="rl-card-body">
    <form {{action "register" on="submit"}}>
      <div class="row">{{md-input type="text" value=username label="Username" class="col s12"}}</div> 
      <div class="row">{{md-input type="password" value=password label="Password" class="col s12"}}</div> 
      <div class="row">{{md-input type="password" value=password_confirmation label="Confirm Password" class="col s12"}}</div>  
      {{md-btn-submit class='light' text='Register'}}
    </form>
  </div>
{{/md-card-panel}}