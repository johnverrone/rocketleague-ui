{{#md-card-panel id='match-card' class='rl-card'}}
  <div class="rl-card-header">
    <h3>{{title}}</h3>
  </div>
  <div {{action 'tabClick'}}>
  {{md-tabs
    class='rl-tabs'
    content=basicTabsContent
    selected=basicTabsSelection}}
  </div>
  
  <div class="rl-card-body">
    
    {{create-match teams=teams weekNumber=basicTabsSelection onCreate=(action 'createMatch') class="center-align"}}

    {{#md-card-collapsible class='rl-collection row'}}
      {{#each matchesByWeek as |match|}}
        {{#md-collapsible title=(get-matchup match.blueTeam.name match.orangeTeam.name)}}
          {{match-item match=match addGame=(action 'addGame')}}
        {{/md-collapsible}}
      {{/each}}
    {{/md-card-collapsible}}
  </div>
{{/md-card-panel}}